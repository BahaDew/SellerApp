<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:id="@+id/root"
    android:background="@drawable/bg_oval"
    android:layout_height="116dp"
    >

    <TextView
        app:layout_constraintVertical_bias=".5"
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/uzum_medium"
        android:paddingHorizontal="4dp"
        android:text="Lazizbek"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/lastname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:paddingHorizontal="4dp"

        android:layout_marginTop="4dp"
        android:id="@+id/lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mamadiyorov"
        android:fontFamily="@font/uzum_medium"
        app:layout_constraintLeft_toLeftOf="@id/firstname"
        app:layout_constraintBottom_toTopOf="@id/phone_number"
        app:layout_constraintTop_toBottomOf="@id/firstname"
        android:textSize="20sp" />

    <TextView
        android:paddingHorizontal="4dp"

        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+998-99-777-77-77"
        android:fontFamily="@font/uzum_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/lastname"
        app:layout_constraintTop_toBottomOf="@id/lastname"
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/product_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"

        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:paddingHorizontal="4dp"
        android:text="Laptop"
        android:textColor="#49454F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/firstname" />

    <TextView
        android:id="@+id/amount_payable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="12dp"

        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:paddingHorizontal="2dp"

        android:text="970_000 so'm"
        android:textColor="#F60808"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_name2" />
</androidx.constraintlayout.widget.ConstraintLayout>