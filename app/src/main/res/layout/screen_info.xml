<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/color_app_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/container_userinfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintVertical_weight="2.5"
        app:layout_constraintBottom_toTopOf="@id/recycler"
        app:layout_constraintTop_toBottomOf="@id/appBar"/>

    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="6dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/appBar"
        app:layout_constraintLeft_toLeftOf="@id/appBar"
        app:layout_constraintRight_toRightOf="@id/appBar"
        app:layout_constraintTop_toTopOf="@id/appBar"
        app:tint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_regular"
        android:text="Client Data"
        android:textColor="#FFF"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@id/appBar"
        app:layout_constraintLeft_toLeftOf="@id/appBar"
        app:layout_constraintRight_toRightOf="@id/appBar"
        app:layout_constraintTop_toTopOf="@id/appBar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/container_userinfo"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_time_piece"
        app:layout_constraintVertical_weight="5"/>
    <TextView
        android:id="@+id/firstname"
        style="@style/MyUserInfoText"
        android:elevation="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@id/container_userinfo"
        app:layout_constraintTop_toTopOf="@id/container_userinfo"
        android:text="First Name: " />

    <TextView
        android:id="@+id/lastname"
        style="@style/MyUserInfoText"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="@id/container_userinfo"
        app:layout_constraintTop_toBottomOf="@id/firstname"
        android:text="Last Name: " />

    <TextView
        android:id="@+id/product_name"
        style="@style/MyUserInfoText"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="@id/container_userinfo"
        app:layout_constraintTop_toBottomOf="@id/lastname"
        android:text="Product: " />

    <TextView
        android:id="@+id/product_price"
        style="@style/MyUserInfoText"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="@id/container_userinfo"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        android:text="Price: " />

    <TextView
        android:id="@+id/payment_month"
        style="@style/MyUserInfoText"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="@id/container_userinfo"
        app:layout_constraintTop_toBottomOf="@id/product_price"
        android:text="Payment Term: " />

    <TextView
        android:id="@+id/pay_month"
        style="@style/MyUserInfoText"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="@id/container_userinfo"
        app:layout_constraintTop_toBottomOf="@id/payment_month"
        android:text="Per Monnth: " />

    <TextView
        android:id="@+id/payed_moth"
        style="@style/MyUserInfoText"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="@id/container_userinfo"
        app:layout_constraintTop_toBottomOf="@id/pay_month"
        android:text="Paid months: " />

</androidx.constraintlayout.widget.ConstraintLayout>