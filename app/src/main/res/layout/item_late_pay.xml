<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/second_name"
            app:layout_constraintLeft_toLeftOf="@id/constraint"
            app:layout_constraintTop_toTopOf="@id/constraint"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Axmadaliyev" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/second_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/product_name"
            app:layout_constraintLeft_toLeftOf="@id/first_name"
            app:layout_constraintTop_toBottomOf="@id/first_name"
            tools:text="Ulug'bek" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@id/comment"
            app:layout_constraintLeft_toLeftOf="@id/first_name"
            app:layout_constraintRight_toRightOf="@id/guid"
            app:layout_constraintTop_toBottomOf="@id/second_name"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Samsung S10 5G" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/add_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ic_comment"
            app:layout_constraintBottom_toTopOf="@id/money_late"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/money_late"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/constraint"
            app:layout_constraintRight_toRightOf="@id/constraint"
            app:layout_constraintTop_toBottomOf="@id/add_comment"
            android:textStyle="italic"
            tools:text="100_000 so'm" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="@id/constraint"
            app:layout_constraintLeft_toLeftOf="@id/constraint"
            app:layout_constraintRight_toRightOf="@id/constraint"
            app:layout_constraintTop_toBottomOf="@id/money_late"
            android:textColor="#FF0000"
            android:background="@drawable/bg_late"
            android:textSize="14sp"
            android:padding="7dp"
            tools:text="dfklgdfklgkdfgkdg;d;lkgd\ndsfsdfsdfsdfsdf\ndsfsdfsdfsdfsdf\nddddd\ndfsdf"
            tools:ignore="NotSibling" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>